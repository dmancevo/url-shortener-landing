    display: flex;
    align-items: flex-start;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .currency {
    font-size: 1.5rem;
    color: var(--primary);
    font-weight: 700;
    margin-right: 0.25rem;
    margin-top: 0.5rem;
  }

  .amount {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--secondary);
    line-height: 1;
  }

  .price-period {
    color: var(--text-light);
    font-size: 1rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
    text-align: left;
  }

  .feature-list li {
    padding: 0.75rem 0;
    color: var(--text);
    border-bottom: 1px solid var(--border);
    font-size: 1rem;
  }

  .feature-list li:last-child {
    border-bottom: none;
  }

  .btn-block {
    width: 100%;
    text-align: center;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .terminal-body {
      padding: 1rem;
    }

    .terminal-body code {
      font-size: 0.75rem;
      line-height: 1.6;
    }

    .terminal-header {
      padding: 0.6rem 0.75rem;
    }

    .terminal-button {
      width: 10px;
      height: 10px;
    }

    .copy-button {
      padding: 0.35rem 0.6rem;
      font-size: 0.7rem;
    }

    .copy-button svg {
      width: 12px;
      height: 12px;
    }

    .features h2,
    .use-cases h2,
    .pricing h2 {
      font-size: 2rem;
    }

    .pricing-subtitle {
      font-size: 1rem;
    }

    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .pricing-card {
      padding: 2rem;
    }

    .amount {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  // Copy terminal code functionality
  const copyButton = document.getElementById('copy-terminal-code');
  const terminalCode = document.getElementById('terminal-code');
  const copyText = copyButton?.querySelector('.copy-text');

  copyButton?.addEventListener('click', async () => {
    if (!terminalCode || !copyText) return;

    // Get the text content without the prompt symbol
    const codeText = terminalCode.textContent?.replace(/^\$\s*/, '') || '';

    try {
      await navigator.clipboard.writeText(codeText);

      // Show "Copied!" feedback
      copyButton.classList.add('copied');
      const originalText = copyText.textContent;
      copyText.textContent = 'Copied!';

      // Reset after 2 seconds
      setTimeout(() => {
        copyButton.classList.remove('copied');
        copyText.textContent = originalText;
      }, 2000);
    } catch (err) {
      console.error('Failed to copy text:', err);
    }
  });
</script>
